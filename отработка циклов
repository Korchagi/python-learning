#Задача 1: Перебор заказов с их номерами
for i in range(len(orders)):
    print(f"Заказ №{i+1}: сумма {orders[i]} руб.")

#Задача 2: Подсчёт общей суммы
total = sum(orders)
print(f"Общая сумма всех заказов: {total} руб.")

#Задача 3: перебор списка
#список товаров
products = ["Ноутбук", "Смартфон", "Планшет", "Наушники"]

#вывод перебора из списка
for product in products:
    print(f"Товар:{product}")
