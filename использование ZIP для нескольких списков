#Задача: использование ZIP для нескольких списков
#входные данные - продажи двух филиалов по дням
branch_a = [1200, 1500, 1100, 900, 1300, 0, 800]
branch_b = [800, 700, 950, 1000, 1200, 500, 400]
days = ["Пн", "Вт", "Ср", "Чт", "Пт", "Сб", "Вс"]

#расчеты
weekly_total = 0
for day, a, b in zip(days, branch_a, branch_b):
    s=a+b
    weekly_total+=s
    print (f"{day}:{s}")
#вывод
print (f"Итого: {weekly_total}")
